<idea-plugin url="https://github.com/InfinityGhost/intellij-direnv">
  <id>systems.infinityghost.intellijdirenv</id>
  <name>Direnv integration</name>
  <vendor>infinityghost</vendor>

  <!-- Product and plugin compatibility requirements -->
  <!-- https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="systems.infinityghost.intellijdirenv.services.EnvironmentService"/>
    <projectService serviceImplementation="systems.infinityghost.intellijdirenv.services.DirenvProjectService"/>
  </extensions>

  <applicationListeners>
    <listener class="systems.infinityghost.intellijdirenv.listeners.DirenvProjectManagerListener"
              topic="com.intellij.openapi.project.ProjectManagerListener"/>
  </applicationListeners>
</idea-plugin>
